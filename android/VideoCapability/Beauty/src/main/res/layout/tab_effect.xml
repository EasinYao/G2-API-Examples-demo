            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/ic_effect_thinnose"
            android:gravity="center"
            android:paddingLeft="@dimen/effect_btn_padding"
            android:textColor="@color/white"
            android:text="@string/effect_longnose"/>
        <RadioButton
