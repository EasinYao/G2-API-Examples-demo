        <RadioButton
            android:id="@+id/rb_effect_narrowface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/ic_effect_shrinkface"
            android:gravity="center"
